alias vim='nvim'
alias mail='thunderbird-beta'
alias dldir='wget -r -nH --cut-dirs=2 --no-parent --reject="index.html*"'

# if there's no gui for wifi login lol
alias wifi='nmcli device wifi connect Lamington password '
alias wifi_login='login() { nmcli device wifi connect $1 password $2 };login'

alias clone='clone() { git clone git@github.com:lachlan-waugh/$1.git };clone'

# docker stuff
alias docker-clean='docker rm -f $(docker ps -aq) && docker system prune -a'
alias docker-ip='get_ip() { docker inspect $( docker ps | grep "$1" | cut -f1 -d" " ) | grep IPAddress };get_ip'
alias docker-bash='get_shell() { docker exec -it $( docker ps | grep "$1" | cut -f1 -d" " ) /bin/bash };get_shell'

# pwn stuff
alias binja='binaryninja-demo'
