#!/usr/bin/zsh

if [[ $1 = '--cache' ]]; then
    cp ~/.config/i3/config .i3config
    cp ~/.Xresources .Xresources
    cp ~/.zshrc .zshrc
    cp ~/.zsh_aliases .zsh_aliases
    cp ~/.config/nvim/init.vim .vimrc
    cp ~/.tmux.conf .
    cp ~/.gdbinit .gdbinit

elif [[ $1 = "--diff" ]]; then
    diff ~/.config/i3/config .i3config
    diff ~/.Xresources .Xresources
    diff ~/.zshrc .zshrc
    diff ~/.zsh_aliases .zsh_aliases
    diff ~/.config/nvim/init.vim .vimrc
    diff ~/.tmux.conf .
    diff ~/.gdbinit .gdbinit

else
    cp .i3config ~/.config/i3/config # source with $mod + Shift + r
    cp .Xresources ~/
    xrdb ~/.Xresources

    cp .zshrc ~/
    cp .zsh_aliases ~/
    source ~/.zshrc

    mkdir -p ~/.config/nvim
    cp .vimrc ~/.config/nvim/init.vim # source with :PlugInstall
    
    cp .tmux.conf ~/ # source with tmux source ~/.tmux.conf
    # tmux source ~/.tmux.conf # only needed if running in tmux

    cp .gdbinit ~/
fi
